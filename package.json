{
  "name": "oden",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/storybook",
    "docs": "npm run dev --workspace=apps/docs",
    "build": "npm run build:design-tokens && npm run build:react && npm run build:storybook && npm run build:docs",
    "build:design-tokens": "npm run build --workspace=packages/design-tokens",
    "build:docs": "npm run build --workspace=apps/docs",
    "build:react": "npm run build --workspace=packages/react",
    "build:storybook": "npm run build --workspace=apps/storybook",
    "deploy": "npm run build && npm run deploy:docs",
    "deploy:docs": "npm run deploy --workspace=apps/docs",
    "changeset-version": "changeset version",
    "changeset-publish": "npm run build && changeset publish",
    "lint": "biome lint .",
    "format": "biome format . --write",
    "check": "biome check . --write"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.12",
    "@shikakun/dashi": "workspace:*",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vanilla-extract/css": "^1.17.0",
    "@vanilla-extract/vite-plugin": "^4.0.19",
    "@vitejs/plugin-react": "^4.3.4",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.4.0",
    "style-dictionary": "^4.0.1",
    "typescript": "^5.7.3",
    "vite": "^5.4.14",
    "vite-plugin-dts": "^4.5.0",
    "yaml": "^2.5.0"
  }
}
