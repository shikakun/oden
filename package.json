{
  "name": "oden",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "docs": "pnpm --filter docs dev",
    "build": "pnpm build:design-tokens && pnpm build:react && pnpm build:docs",
    "build:design-tokens": "pnpm --filter @shikakun/dashi build",
    "build:docs": "pnpm --filter docs build",
    "build:react": "pnpm --filter @shikakun/oden build",
    "deploy": "pnpm build && pnpm deploy:docs",
    "deploy:docs": "pnpm --filter docs deploy",
    "changeset-version": "changeset version",
    "changeset-publish": "pnpm build && changeset publish",
    "lint": "biome lint .",
    "format": "biome format . --write",
    "check": "biome check . --write"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.6",
    "@shikakun/dashi": "workspace:*",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@vanilla-extract/css": "^1.17.4",
    "@vanilla-extract/vite-plugin": "^5.1.1",
    "@vitejs/plugin-react": "^5.0.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-icons": "^5.5.0",
    "style-dictionary": "^5.0.4",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "vite-plugin-dts": "^4.5.4",
    "yaml": "^2.8.1"
  }
}
