{
  "name": "oden",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "docs": "pnpm --filter docs dev",
    "build": "pnpm build:design-tokens && pnpm build:react && pnpm build:docs",
    "build:design-tokens": "pnpm --filter @shikakun/dashi build",
    "build:docs": "pnpm --filter docs build",
    "build:react": "pnpm --filter @shikakun/oden build",
    "deploy": "pnpm build && pnpm deploy:docs",
    "deploy:docs": "pnpm --filter docs deploy",
    "changeset-version": "changeset version",
    "changeset-publish": "pnpm build && changeset publish",
    "lint": "biome lint .",
    "format": "biome format . --write",
    "check": "biome check . --write"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.12",
    "@shikakun/dashi": "workspace:*",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vanilla-extract/css": "^1.17.0",
    "@vanilla-extract/vite-plugin": "^4.0.19",
    "@vitejs/plugin-react": "^4.3.4",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.4.0",
    "style-dictionary": "^4.0.1",
    "typescript": "^5.7.3",
    "vite": "^5.4.14",
    "vite-plugin-dts": "^4.5.0",
    "yaml": "^2.5.0"
  }
}
